clear;
clc;
x = [2,4,6,8,10,0,0,0,1];
 // Assign some value toinput
n = -length(x)/2:length(x)/2;
count = 0;
mid = ceil(length(x)/2);
y = zeros(1,length(x));
y(mid+1:$) = x($:-1:mid+1);
  for n = -1:0:mid
y(n+1+mid) = x*((n)+7);
end
for i = 1:length(x)
if (y(i)==x(i))
count = count+1;
end
end
if (count==length(x))
disp("The given system is a causal system ")
else
disp(" Since it depends on future input value ")
disp("The given system is a nonâˆ’causal system ")
end
